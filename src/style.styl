@import "~flexboxgrid"
@import "~normalize.css"

html
  font-family: "OpenSans", Georgia, Serif;

.header
  background: url('/assets/img/header-bg.png') center no-repeat;
  padding: 289px 0 131px
  min-width: 1170px

  .row
    width: 1170px
    margin: 0 auto

  .dropdown
    border: #ccc 1px solid;
    background: #eee;
    width: 177px;		/* На 20px меньше, чем у select'а. Примерно такова ширина стандартной кнопки */
    overflow: hidden;		/* Кнопка будет находиться за пределами "обертки" */
    display: inline-block;
    position: relative;		/* Чтобы элементы с position:absolute позиционировались по "обертке" */

    &__select
      position: relative;		/* Это нужно, чтобы работал z-index */

      width: 197px;
      height: 27px;		/* Меньше, чем рисованная "кнопочка" на ширину нужного border'а */

      padding-right: 20px

      //line-height: 40px;
      font-size: 14px
      background: none;		/* Через прозрачный фон будет видно кнопку */
      border: none;

      z-index: 100;

    &__button
      background: url('/assets/img/arrow.png') center center no-repeat;
      height: 15px;		/* Размеры подготовленной картинки */
      width: 10px;
      position: absolute;		/* Размещаем объект по правому краю */
      right: 10px;
      top: 0;
      bottom: 0;
      z-index: 50;		/* И спускаем его на нижний слой - чтобы ссылка */
      /* не перехватывала событие щелчка от select'а */

.search

  .row
    width: 1170px
    margin: 0 auto
    margin-top: -30px
    margin-bottom: -34px
